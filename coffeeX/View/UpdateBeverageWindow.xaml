<Window
    x:Class="coffeeX.View.UpdateBeverageWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:coffeeX.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="UpdateBeverageWindow"
    Width="845"
    Height="650"
    MinWidth="845"
    MinHeight="650"
        WindowStartupLocation="CenterScreen"
    
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            Content="THÊM MÓN ĂN VÀO MENU"
            FontSize="36"
            FontWeight="Bold" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <TextBox
                    x:Name="beverageName"
                    Width="330"
                    Margin="0,0,0,30"
                    Padding="10"
                    materialDesign:HintAssist.Foreground="#9B9B9B"
                    materialDesign:HintAssist.Hint="Tên thức uống"
                    materialDesign:ShadowAssist.ShadowDepth="Depth0"
                    materialDesign:TextFieldAssist.TextFieldCornerRadius="15"
                    materialDesign:TextFieldAssist.UnderlineBrush="{x:Null}"
                    materialDesign:TextFieldAssist.UnderlineCornerRadius="0"
                    AcceptsReturn="False"
                    Background="#F1F1F1"
                    BorderThickness="0"
                    FontSize="20" />
                <TextBox
                    x:Name="beverageType"
                    Width="330"
                    Margin="0,0,0,30"
                    Padding="10"
                    materialDesign:HintAssist.Foreground="#9B9B9B"
                    materialDesign:HintAssist.Hint="Loại Thức Uống"
                    materialDesign:ShadowAssist.ShadowDepth="Depth0"
                    materialDesign:TextFieldAssist.TextFieldCornerRadius="15"
                    materialDesign:TextFieldAssist.UnderlineBrush="{x:Null}"
                    materialDesign:TextFieldAssist.UnderlineCornerRadius="0"
                    AcceptsReturn="False"
                    Background="#F1F1F1"
                    BorderThickness="0"
                    FontSize="20" />
                <TextBox
                    x:Name="beveragePrice"
                    Width="330"
                    Padding="10"
                    materialDesign:HintAssist.Foreground="#9B9B9B"
                    materialDesign:HintAssist.Hint="Đơn Giá"
                    materialDesign:ShadowAssist.ShadowDepth="Depth0"
                    materialDesign:TextFieldAssist.TextFieldCornerRadius="15"
                    materialDesign:TextFieldAssist.UnderlineBrush="{x:Null}"
                    materialDesign:TextFieldAssist.UnderlineCornerRadius="0"
                    AcceptsReturn="False"
                    Background="#F1F1F1"
                    BorderThickness="0"
                    FontSize="20" />
            </StackPanel>
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <Border
                    Width="268"
                    Height="268"
                    CornerRadius="10">
                    <Border.Background>
                        <ImageBrush ImageSource="/Resource/Images/black_coffee.png" Stretch="Fill" />
                    </Border.Background>
                </Border>

                <Button
                    Grid.Row="2"
                    Width="53"
                    Height="53"
                    Margin="0,-30,0,0"
                    materialDesign:ButtonAssist.CornerRadius="360"
                    Background="#DFDFDF"
                    BorderThickness="0"
                    FontFamily="Roboto"
                    FontSize="18"
                    FontWeight="Medium">


                    <Image
                        Width="25"
                        Height="25"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="/Resource/Images/camera.png" />


                </Button>
            </StackPanel>


        </Grid>

        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Margin="0,0,0,80">
            <Button
                Width="222"
                Height="63"
                Margin="0,0,44,0"
                materialDesign:ButtonAssist.CornerRadius="16"
                Content="Chỉnh sửa"
                Style="{StaticResource PrimaryButton}" 
                />
            <Button
                Width="222"
                Height="63"
                materialDesign:ButtonAssist.CornerRadius="16"
                Content="Xóa"
                Background="White"
                Foreground="Black"
                Style="{StaticResource PrimaryButton}" />
        </StackPanel>
    </Grid>
</Window>