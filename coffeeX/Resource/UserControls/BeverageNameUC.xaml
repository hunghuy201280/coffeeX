<UserControl x:Class="coffeeX.Resource.UserControls.BeverageNameUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:coffeeX.Resource.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             >
    <TextBox
    x:Name="txtBox"
    materialDesign:HintAssist.Foreground="#9B9B9B"
    Background="#F1F1F1"
    AcceptsReturn="False"
    MinWidth="100"
    materialDesign:HintAssist.Hint="{Binding Hint}"
    materialDesign:ShadowAssist.ShadowDepth="Depth0"
    materialDesign:TextFieldAssist.TextFieldCornerRadius="15"
    materialDesign:TextFieldAssist.UnderlineBrush="{x:Null}"
    materialDesign:TextFieldAssist.UnderlineCornerRadius="0"
    BorderThickness="0"
    Padding="10"
    FontSize="20"

    
        />

</UserControl>
